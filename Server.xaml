<Window x:Class="Tiny_Text_HTTP_Sever.Server"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tiny_Text_HTTP_Sever"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Server" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="statusText" HorizontalAlignment="Left" Height="20" Margin="84,14,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="135"/>
        <Label HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Content="服务器状态："/>
        <Button x:Name="Startbutton" HorizontalAlignment="Left" Height="32" Margin="720,393,0,0" VerticalAlignment="Top" Width="70" Content="启动" Click="Startbutton_Click"/>
        <Button x:Name="stopButton" HorizontalAlignment="Left" Height="32" Margin="645,393,0,0" VerticalAlignment="Top" Width="70" Content="停止" Click="stopButton_Click"/>
        <GroupBox HorizontalAlignment="Left" Height="369" Header="扩展功能" Margin="10,40,0,0" VerticalAlignment="Top" Width="209">
            <Button Height="25" Margin="10,0,12,0" VerticalAlignment="Top" Content="HTML编辑器"/>
        </GroupBox>
        <GroupBox HorizontalAlignment="Left" Height="226" Header="预览" Margin="224,14,0,0" VerticalAlignment="Top" Width="566">
            <WebBrowser HorizontalAlignment="Left" Height="199" Width="556" x:Name="webBrowser"/>
        </GroupBox>

    </Grid>
</Window>
