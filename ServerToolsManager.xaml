<Window x:Class="Tiny_Text_HTTP_Sever.ServerToolsManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tiny_Text_HTTP_Sever"
        mc:Ignorable="d"
        Title="ServerToolsManager" Height="175" Width="520">
    <Grid Margin="0,0,0,5">
        <TextBox HorizontalAlignment="Left" Height="20" Margin="55,15,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="94" x:Name="port"/>
        <Button Content="使用此端口" HorizontalAlignment="Left" Height="20" Margin="154,15,0,0" VerticalAlignment="Top" Width="67"/>
        <Label Content="端口：" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="40" RenderTransformOrigin="0.375,0.425"/>
        <Button HorizontalAlignment="Left" Height="45" Margin="440,100,0,0" VerticalAlignment="Top" Width="70" Content="启动"/>
        <Label Content="目录:" HorizontalAlignment="Left" Height="25" Margin="10,45,0,0" VerticalAlignment="Top" Width="40"/>
        <TextBox HorizontalAlignment="Left" Height="45" Margin="55,45,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="166" x:Name="dir" IsEnabled="False"/>
    </Grid>
</Window>
