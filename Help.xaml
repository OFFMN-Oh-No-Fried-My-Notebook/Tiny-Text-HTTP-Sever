<Window x:Class="Tiny_Text_HTTP_Sever.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tiny_Text_HTTP_Sever"
        mc:Ignorable="d"
        Title="Help" Height="450" Width="570" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <ComboBox Height="20" Margin="10,35,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="105" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="入门"/>
        </ComboBox>
        <ListBox Margin="10,60,0,10" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.RowSpan="2" HorizontalAlignment="Left" Width="105"/>
        <RichTextBox Margin="120,60,10,10" Grid.RowSpan="2">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label Content="Hi! 这里是说明书" HorizontalAlignment="Left" Height="30" Margin="5,5,0,0" VerticalAlignment="Top" Width="185" FontFamily="Bodoni MT" FontSize="20" Background="White" BorderBrush="Black" OpacityMask="Black" Foreground="Black" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-4.289"/>
                    <RotateTransform/>
                    <TranslateTransform X="-1.125"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox Margin="120,35,10,0" TextWrapping="Wrap" Text="TextBox" Height="20" VerticalAlignment="Top" x:Name="textbox1"/>

    </Grid>
</Window>
